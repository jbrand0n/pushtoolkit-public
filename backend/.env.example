# Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/pushtoolkit?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# VAPID (Generate using: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:your-email@example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption (MUST be exactly 32 characters)
# Generate a secure key: node -e "console.log(require('crypto').randomBytes(32).toString('base64').slice(0, 32))"
ENCRYPTION_KEY=your-32-character-encryption-key

# Frontend
FRONTEND_URL=http://localhost:5173

# Email (Resend)
# Get your API key from: https://resend.com/api-keys
# Free tier: 3,000 emails/month, 100 emails/day
# No sender verification required!
RESEND_API_KEY=
FROM_EMAIL=onboarding@resend.dev
FROM_NAME=PushToolkit

# Logging
LOG_LEVEL=debug
